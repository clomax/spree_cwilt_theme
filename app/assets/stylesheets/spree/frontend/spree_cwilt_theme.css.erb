@media only screen and (min-width: 768px) and (max-width: 959px) {

  #content                    { width: 463px; }
  .showcase                   { display: none !important; }
  .container .ten.columns     { width: 500px; }
  .container .eight.columns   { width: 200px; }
  .container .six.columns     { width: 500px; }
  .container .three.columns   { width: 146px; }
  .taxon-menu-item            {
    max-width: initial !important;
    font-size: 12pt !important;
  }
  #product-properties         { width: 315px; }

  .similar_product_image      { width: 100px; }
  .similar_product_image img  { max-width: 100px; }

  figure img { left: 30% !important }
}


@media (max-width: 767px) {
  #mobile-menu {
    display: block;
    background-color: #DDD;
    margin-left: -40px;
    margin-right: -40px;
    padding: 5px;
    height: 50px;
  }

  figure img { width: 180px;}
  figure img {left: 64% !important; }

  .mob-menu-list {margin-left: 10px; }
  .mob-menu-list li {
    float: left;
    color: #808080;
  }

  .mobile-subtaxon-menu {
    position: absolute;
    left: 0;
    top: 60px;
    z-index: 100;
    background-color: #DDD;
    display: none
  }
  .mobile-subtaxon-menu tr {
    border: 0;
  }


  #srch { float: right; }

  nav#breadcrumbs {text-align: center;}

  #top-nav-bar    { display: none; }
  ul#main-nav-bar { display: none; }
  aside#sidebar   { display: none; }

  span[id="switcher"] {
    display: block;
    background-image: url(https://www.paypalobjects.com/webstatic/mktg/Logo/pp-logo-100px.png) !important;
    background-repeat: no-repeat !important;
    background-position: center !important;
    width: 100px !important;
    height: 50px !important;
  }
  tr#paypal-row img { display: none !important; }

  #content h1 { text-align: center; }

  /* RESPONSIVE CART TABLE */
  table, thead, tbody, th, tr, td {
    display: block;
  }

  thead {
    position: absolute;
    top: -9999px;
                left: -9999px;
  }

  tr { border: 1px solid #ccc; }
  .cart-item-total-header {display: none;}
  .cart-item-total {display: none}
  .cart-item-description {width: 95% !important;}
  .line-item-description { display: none}
  .cart-item-image {display: none }

  td {
    border: none;
    position: relative;
    padding-left: 50%;
  }

  td:before {
    position: absolute;
    top: 6px;
    left: 6px;
    width: 45%;
    padding-right: 10px;
    white-space: nowrap;
  }
  .cart-total > td:nth-child(1) { display: none; }
}

@media only screen and (min-width: 480px) and (max-width: 767px) {
  header {height: 190px}
  figure {
    position: relative;
    display: block;
    right: 3%;
  }

  .page-title { font-size: 16pt; width: 275px; text-align: center; }

