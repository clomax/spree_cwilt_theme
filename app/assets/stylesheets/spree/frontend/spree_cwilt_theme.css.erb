html {
  height: 100%;
}

a {
  color: #808080;
}

a:hover {
  color: #808080;
  font-weight: bold;
}

ul, ol {
  list-style-position: initial;
  list-style-type: none;
}

body {
  height: 100%;
  background-repeat: repeat;
  background-image: url(<%= asset_path 'spree/frontend/bg.png' %>);
}

input#keywords {
  border-radius: 5px;
}

.container {
  min-height: 100%;
  box-sizing: border-box;
  border-top: 6px solid #bbb;
  background-color: #fff;

  -moz-box-shadow:    0px 0px 10px 10px #ccc;
  -webkit-box-shadow: 0px 0px 10px 10px #ccc;
  box-shadow:         0px 0px 10px 10px #ccc;
  padding-left: 40px;
  padding-right: 40px;
}

#sidebar {
  margin-left: 0;
}

.container .column, .container .columns {
  margin-right: 0px;
}

.container .four.columns {
  width: 178px;
}

.container .twelve.columns {
  width: 682px;
  float: right;
}

ul#products {
  float: right;
}

ul#main-nav-bar {
  width: 900px;
  margin: 0 auto;
}

nav#top-nav-bar {
  float: right;
  width: auto;
}

nav#taxonomies .taxonomy-root {
  font-size: 14pt;
  color: #999999;
  font-family: georgia;
  border-bottom: 1px dashed #808080;
  padding-bottom: 5px;
  margin-bottom:5px;
}

a.taxonomy-1 {
  font-size: 13pt;
  display: block;
  border-bottom: 1px dashed #999999;
  margin-bottom: 9px;
  padding-bottom: 5px;
  font-family: georgia;
}

a.taxonomy-2 {
  font-size: 11pt;
  font-family: georgia;
}

ul.taxons-list {
  font-family: georgia;
  margin-bottom: 20px;
  border-bottom: 1px dashed #808080;
}

ul#main-nav-bar li a {
  font-size: 14pt;
}

ul#main-nav-bar li:first-child a {
  padding-left: 5px;
}

ul#main-nav-bar {
  font-family: georgia;
  padding-top: 10px;
  padding-bottom: 10px;
  border-top: 1px dashed #808080;
  border-bottom: 1px dashed #808080;
}

#wrapper {
  padding-bottom: 130px;
}

ul#products li {
  margin-right: 0;
}

ul#products li .product-image {
  border: 0;
  padding: 0;
}

ul#products li a.info {
  font-family: verdana;
  font-size: 11pt;
  border-bottom: 0;
  color: #B3B3B3;
}

ul#products li .price {
  padding-top: 5px;
  color: #808080;
  font-family: verdana;
  font-size: 13pt;
}

footer#footer {
  border-top: 6px solid #bbb;
  margin: 0;
  padding: 0;
  width: 100%;
  background-color: #eee;
  height: 100px;
  position: absolute;
  bottom: 0;
  margin-left: -40px;
}

footer h2 {
  font-size: 1.3em;
}

footer div#contents {
  margin-left: 50px;
}
