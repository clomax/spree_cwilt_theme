html {
  height: 100%;
}

a {
  color: #808080;
}

a:hover {
  color: #808080;
  font-weight: bold;
}

body {
  height: 100%;
  background-repeat: repeat;
  background-image: url(<%= asset_path 'spree/frontend/bg.png' %>);
}

input#keywords {
  border-radius: 5px;
}

.container {
  min-height: 100%;
  box-sizing: border-box;
  border-top: 6px solid #bbb;
  background-color: #fff;

  -moz-box-shadow:    0px 0px 10px 10px #ccc;
  -webkit-box-shadow: 0px 0px 10px 10px #ccc;
  box-shadow:         0px 0px 10px 10px #ccc;
}

ul#main-nav-bar li a {
  font-size: 20pt;
}

ul#main-nav-bar li:first-child a {
  padding-left: 5px;
}

ul#main-nav-bar {
  font-family: georgia;
  padding-top: 10px;
  padding-bottom: 10px;
  border-top: 1px dashed #808080;
  border-bottom: 1px dashed #808080;
}

#wrapper {
  padding-bottom: 100px;
}

ul#products li {
  margin-right: 0;
}

ul#products li .product-image {
  border: 0;
  padding: 0;
}

ul#products li a.info {
  font-family: verdana;
  font-size: 11pt;
}

a.info {
  font-family: verdana;
  border-bottom: 0;
  font-size: 13pt;
}

ul#products li .price {

}

footer#footer {
  border-top: 6px solid #bbb;
  margin: 0;
  padding: 0;
  width: 100%;
  background-color: #eee;
  height: 100px;
  position: absolute;
  bottom: 0;
}

footer h2 {
  font-size: 1.3em;
}

footer div#contents {
  margin-left: 50px;
}
