html {
  height: 100%;
}

a {
  color: #808080;
}

a:hover {
  color: #808080;
  text-shadow: 0px -1px 0px black;
}

ul, ol {
  list-style-position: initial;
  list-style-type: none;
}

body {
  height: 100%;
  background-repeat: repeat;
  background-image: url(<%= asset_path 'spree/frontend/bg.png' %>);
}

input#keywords {
  border-radius: 5px;
}

        .container .one.column,
        .container .one.columns,
        .container .two.columns,
        .container .three.columns,
        .container .four.columns,
        .container .five.columns,
        .container .six.columns,
        .container .seven.columns,
        .container .eight.columns,
        .container .nine.columns,
        .container .ten.columns,
        .container .eleven.columns,
        .container .twelve.columns,
        .container .thirteen.columns,
        .container .fourteen.columns,
        .container .fifteen.columns,
        .container .sixteen.columns,
        .container .one-third.column,
        .container .two-thirds.column { max-width: 100%; }

.container {
  min-height: 100%;
  box-sizing: border-box;
  border-top: 6px solid #bbb;
  background-color: #fff;

  -moz-box-shadow:    0px 0px 10px 10px #ccc;
  -webkit-box-shadow: 0px 0px 10px 10px #ccc;
  box-shadow:         0px 0px 10px 10px #ccc;
  padding-left: 40px;
  padding-right: 40px;
}

#sidebar {
  margin-left: 0;
}

.container .column, .container .columns {
  margin-right: 0px;
}

.container .three.columns {
  margin-left: 7px;
}

.colums.three.alpha {
  margin-left: 0;
}

.container .four.columns {
  width: 178px;
}

.container .ten.columns {
  width: 318px;
}

.container .twelve.columns {
  width: 668px;
  margin-left: 34px;
}

.showcase {
  width: 663px;
  height: 218px;
  background-color: #000;
  border-radius: 15px;
  margin-bottom: 20px;
  float: right;
}

#content {
  font-family: georgia;
}

.price.diff {
  color: #808080;
}

span.price {
  color: #808080;
}

input[type="submit"], input[type="button"], input[type="reset"], button, a.button {
  background-color: #808080;
  border: 1px solid #999999;
}

#breadcrumbs li a {
  color: #808080;
}

ul#main-nav-bar {
  width: 100%;
  margin: 0 auto;
}

li.taxon-menu-item ul {
  display: none;
}

li.taxon-menu-item:hover ul {
  display: block;
  position: absolute;
  background: white;
  white-space: nowrap;
}

nav #main-nav-bar li#link-to-cart {
  color: #808080;
}

li.subtaxon-menu-item {
  padding: 5px;
  text-align: center;
}

#product-images #main-image{
  border: none;
  text-align: initial;
}

#product-description .product-title {
  font-size: 15pt;
  font-family: georgia;
  border: none;
  color: #999999;
}

#product-properties {
  width: 313px;
}

nav #main-nav-bar {
  font-weight: initial;
}

ul#main-nav-bar {
  display: table;
}

ul#main-nav-bar li.taxon-menu-item {
  display: table-cell;
  text-align: center;
}

nav#top-nav-bar {
  float: right;
  width: auto;
}

.product-section-title {
  margin: 0;
}

.container .sixteen.columns {
  margin-left:0;
  width: 879px;
}

nav#taxonomies .taxonomy-root {
  font-size: 13pt;
  color: #999999;
  font-family: georgia;
  border-bottom: 1px dashed #808080;
  padding-bottom: 5px;
  margin-bottom:5px;
}

a.taxonomy-1 {
  font-size: 13pt;
  display: block;
  border-bottom: 1px dashed #999999;
  margin-bottom: 9px;
  padding-bottom: 5px;
  font-family: georgia;
}

a.taxonomy-2 {
  font-size: 11pt;
  font-family: georgia;
}

ul .taxons_list {
  font-family: georgia;
  margin-bottom: 30px;
  padding-bottom: 5px;
  border-bottom: 1px dashed #808080;
}

ul#main-nav-bar li.taxon-menu-item a {
  font-size: 13pt;
}

ul#main-nav-bar li.subtaxon-menu-item a {
  font-size: 9pt;
}

ul#main-nav-bar {
  font-family: georgia;
  padding-top: 10px;
  padding-bottom: 10px;
  border-top: 1px dashed #808080;
  border-bottom: 1px dashed #808080;
}

#wrapper {
  padding-bottom: 130px;
}

ul#products li {
  margin-right: 0;
}

ul#products li .product-image {
  border: 0;
  padding: 0;
}

ul#products li a.info {
  font-family: verdana;
  font-size: 11pt;
  border-bottom: 0;
  color: #B3B3B3;
}

ul#products li .price {
  padding-top: 5px;
  color: #808080;
  font-family: verdana;
  font-size: 13pt;
}

footer#footer {
  border-top: 6px solid #bbb;
  margin: 0;
  padding: 0;
  width: 100%;
  background-color: #eee;
  height: 100px;
  position: absolute;
  bottom: 0;
  margin-left: -40px;
  color: #999999;
  font-family: georgia;
}

footer h2 {
  color: #999999;
  font-size: 1.3em;
}

footer div#contents {
  margin-left: 40px;
}
