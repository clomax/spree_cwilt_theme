<h1 class="page-title">Fabric Collections</h1>

<% if collections.any? %>
<ul id="products" class="inline product-listing" data-hook>
  <% collections.each do |collection| %>
    <% url = "t/fabric/collection/#{collection.name}".downcase.gsub(/\s+/, "-") %>
    <% if collection.products.any? %>
    <li id="product_<%= collection.id %>" class="columns three <%= cycle("alpha", "secondary", "", "omega secondary", :name => "classes") %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
      <div class="product-image">
        <%= link_to small_image(collection.products.first, :itemprop => "image", :protocol => "https"), url, :itemprop => 'url' %>
      </div>
      <%= link_to collection.name, url %>
    </li>
    <% end %>
  <% end %>
  <% reset_cycle("classes") %>
</ul>
<% end %>
